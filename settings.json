// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "ui_font_size": 20,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Github Dark"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "cursor_shape": "hollow",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history"
  },
  "close_position": "left",
  "git_status": "true",
  "file_icons": "true",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "terminal": {
    "alternate_scroll": "on",
    "blinking": "on",
    "copy_on_select": true,
    "dock": "bottom",
    "font_size": 16,
    "working_directory": "current_project_directory"
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "folder_icons": false,
    "indent_size": 30,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": "auto"
    }
  }
}
